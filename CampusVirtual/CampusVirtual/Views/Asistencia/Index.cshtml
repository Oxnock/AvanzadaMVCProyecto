@model CampusVirtual.ViewModels.AsistenciaViewModels.IndexViewModel
@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@inject SignInManager<Usuario> SignInManager

<h2>Index</h2>
@if (User.IsInRole("Profesor"))
{
	<h2>Lista de Listas</h2>

	<table class="table table-striped table-bordered display" cellspacing="0" id="myTable">
		<thead>
			<tr>
				<th>Asistencia</th>
				@if (User.IsInRole("Administrador"))
				{
					<th>Opciones</th>
				}
			</tr>
		</thead>
		<tbody>
			@foreach (var curso in Model.Lista)
			{
			<tr>
				<td>
					@curso.Usuario.UserName
				</td>
				<td>
					@curso.Asistio
				</td>
			</tr>
			}
		</tbody>
	</table>
}
