@model CampusVirtual.ViewModels.BecaViewModels.EditarViewModel
@{
	ViewBag.Title = "Editar";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="title">Editar Curso</h2>
<form asp-action="Editar" asp-controller="Beca" method="post">
	<div>
		<label asp-for="Nombre"></label>
		<div>
			<input asp-for="Nombre" value="@Model.Becas.Nombre" class="lbl-block spaces" required/>
			<span asp-validation-for="Nombre"></span>
		</div>
		<div>
			<input asp-for="Porcentaje" value="@Model.Becas.Porcentaje" class="lbl-block spaces" min="0" max="100" required/>
			<span asp-validation-for="Porcentaje"></span>
		</div>

	</div>
	<div>
		<input type="submit" value="Editar" class="btn btn-primary btn-md btn-submit"/>
	</div>
</form>