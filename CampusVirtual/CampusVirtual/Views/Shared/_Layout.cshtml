
@using CampusVirtual.Model.Entities

@inject SignInManager<Usuario> SignInManager
@inject UserManager<Usuario> UserManager


<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Universidad</title>

    <!-- Navbar and Datatables -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.13/css/dataTables.bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.13/js/dataTables.bootstrap.min.js"></script>

    <!-- Initialize Datatables -->
    <script src="~/js/Datatable.js"></script>
    <!-- Css -->
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <nav id="myNavbar" class=" background-gradient navbar-default navbar-inverse navbar-fixed-top" role="navigation">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbarCollapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area=""  class="navbar-brand">Universidad</a>
            </div>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="nav navbar-nav">
                    <li><a asp-area="" asp-controller="Curso" asp-action="Index">Cursos</a></li>
                    <li><a asp-area="" asp-controller="Carreras" asp-action="Index">Carreras</a></li>

                </ul>

                <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">@UserManager.GetUserName(User)</a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Account" asp-action="Ingresar">Salir</a>
                        </li>
                    </ul>
                </form>

            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
    </div>





    @RenderSection("Scripts", required: false)

</body>
</html>