@model CampusVirtual.ViewModels.AccountViewModels.IngresarViewModel
@{
    ViewBag.Title = "Ingresar";
}


<script defer src="https://use.fontawesome.com/releases/v5.0.3/js/all.js"></script>
<link href="https://fonts.googleapis.com/css?family=Raleway:400,700" rel="stylesheet">
<!-- Bootstrap Core CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<!-- Jquery -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

<link href="~/css/Login.css" rel="stylesheet" />
@*<script src="~/js/Login.js"></script>*@


<body class="bg-principal">
    <div class="login-box">
        <img src="~/img/avatar.png" class="img-responsive avatar" alt="User">
        <h1 class="title">Iniciar sesión</h1>

        <form asp-action="Registrar" asp-controller="Account" method="post" class="login form-login">

            <div>
                <label asp-for="Nombre"></label>
                <div>
                    <input asp-for="Nombre" class="usuario no-espacios" type="text" placeholder=" Digite su usuario" name="usuario" required />
                    <span asp-validation-for="Nombre"></span>
                </div>
            </div>
            <div>
                <label asp-for="Clave"></label>
                <div>
                    <input asp-for="Clave" type="password" class="password" placeholder=" Digite su contraseña" name="password" required />
                    <span asp-validation-for="Clave"></span>
                </div>
            </div>
            <div>
                <input type="submit" value="Ingresar" class="btn btn-primary" />
            </div>
        </form>

        <div class="alert alert-danger fade alerthidden">
            La contraseña debe contener:
            <br>- mínimo 8 dígitos
            <br>- un signo de puntuación
            <br>- una letra en mayúscula
            <br>- un número.
        </div>
    </div>


</body>
